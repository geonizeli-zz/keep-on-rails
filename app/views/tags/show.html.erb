<% unless @tag.notes.empty? %>

  <div class="notes">
  <% @tag.notes.each do |note| %>
    <div class="card">
      <header class="card-header">
        <p class="card-header-title">
          <%= note.title %>
        </p>
          <%= link_to '🖍', edit_note_path(note), class: 'card-header-icon' %>
          <%= link_to '🗑', note, method: :delete, class: 'card-header-icon' %>
      </header>
      <div class="card-content">
        <div class="content">
          <%= note.content %>
        </div>
      </div>
    </div>
  <% end %>
  </div>

<% else %>
  <p>You don't have notes</p>
<% end %>

<%= link_to 'New Note', new_note_path, class: 'button is-primary' %>
